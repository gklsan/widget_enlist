<div class="modal fade" id="new_registration" role="dialog">
  <div class="modal-dialog modal-md pt-5">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">SignUp</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <%= form_with(url: users_path, method: "post", remote: false) do %>
          <div class="form-group">
            <%= email_field_tag "user[email]", "", class: "form-control", placeholder: "Email", required: true %>
          </div>
          <div class="form-group">
            <%= password_field_tag "user[password]", "", class: "form-control", placeholder: "Password", required: true %>
          </div>
          <div class="form-group">
            <%= text_field_tag "user[first_name]", "", class: "form-control", placeholder: "First Name", required: true %>
          </div>
          <div class="form-group">
            <%= text_field_tag "user[last_name]", "", class: "form-control", placeholder: "Last Name", required: true %>
          </div>
          <div class="form-group">
            <%= text_field_tag "user[image_url]", "", class: "form-control", placeholder: "Image URL", required: true %>
          </div>
          <%= submit_tag "Submit", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

