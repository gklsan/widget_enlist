<h1>New widget</h1>
<%= form_with(url: widgets_path, method: 'post') do |f| %>
  <div class='form-group'>
    <label>Name</label>
    <%= text_field_tag 'widget[name]', '', class: 'form-control', placeholder: 'Name', required: true %>
  </div>
  <div class='form-group'>
    <label>Description</label>
    <%= text_area_tag 'widget[description]', '', class: 'form-control', placeholder: 'Description', required: true %>
  </div>
  <div class='form-group'>
    <label>Kind</label>
    <%= select_tag 'widget[kind]',
                   options_for_select([ 'visible', 'hidden' ], nil),
                   class: 'form-control' %>
  </div>
  <%= submit_tag 'Save', class: 'btn btn-primary' %>
  <%= link_to 'Cancel', root_path(me: true), class: 'btn btn-secondary' %>
<% end %>
